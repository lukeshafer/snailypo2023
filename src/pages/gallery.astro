---
import { gallery } from "@/data";
import Page from "@/layouts/Page.astro";

export const title = "Gallery";
export const bg = "bg-red-300";
export const size = "5";
---

<Page bg={bg} title={title}>
	<h1 class="lowercase text-3xl">Gallery</h1>
	<ul class="flex flex-wrap justify-center gap-4">
		{
			gallery.map(({ name, src, width }) => (
				<li class="flex flex-col items-center justify-center ">
					<img
						src={src}
						alt={name}
						class="max-w-xs shadow-md shadow-black/25"
						style={{ width: `${width * 50}px` }}
					/>
					<p class="text-center">{name}</p>
				</li>
			))
		}
	</ul>
</Page>
